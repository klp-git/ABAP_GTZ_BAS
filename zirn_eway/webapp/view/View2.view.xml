<mvc:View
    controllerName="zirneway.controller.View2"
    xmlns="sap.m"
    xmlns:table="sap.ui.table"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    height="100%"
>
         <VBox
            id="_IDGenVBox"
            fitContainer="true"
        >
            <smartFilterBar:SmartFilterBar 
            id="_IDGenSmartFilterBar" 
            entitySet="ZIRN"
            persistencyKey="SmartFilter_Explored"/>
            <smartTable:SmartTable id="_IDGenSmartTable"
            entitySet="ZIRN"
            
            tableType="Table"
            header="Gate Entry"
            enableAutoColumnWidth="true"
            editTogglable="false"
            enableAutoBinding="true"
            app:useSmartToggle="true"
            showFullScreenButton="true"
            beforeRebindTable="onBeforeRebindTable"
            class="sapUiResponsiveContentPadding"
            persistencyKey="SmartTableAnalytical_Explored"
            >
             <table:Table
                id="_IDGenTable"
                enableSelectAll="true"
                selectionMode="Single"
                rowSelectionChange="onSelectionChange"
            /> 
             <smartTable:customToolbar>
                <OverflowToolbar id="_IDGenOverflowToolbar2">
                    <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                    <Button id="_IDGenButton1"
                        text="IRN"
                        press="onClickIRN"
                    />
                     <Button id="_IDGenButton2"
                        text="Generate Data"
                        press="onClickTokenGenerateData"
                    />
                    <Button id="_IDGenButton3"
                        text="EwayBill"
                        press="onClickEwayBill"
                    />
                    <Button id="_IDGenButton4"
                        text="PrintForm"
                        press="onClickPrintForm"
                    />
                    <Button id="_IDGenButton5"
                        text="Delete"
                        press="onClickDelete"
                    />
                    <Button id="_IDGenButton6"
                        text="Details"
                        press="onClickDetails"
                    />
                </OverflowToolbar>
            </smartTable:customToolbar>
            <smartTable:layoutData>
                <FlexItemData 
                id="_IDGenFlexItemData"
                    growFactor="1"
                    baseSize="0%"
                />
            </smartTable:layoutData>
            </smartTable:SmartTable>
        </VBox>
</mvc:View>
